/* Clickable title animations */
.hero-title.clickable-title {
  transition: all 0.3s ease;
  position: relative;
  cursor: pointer;
}

.hero-title.clickable-title:hover {
  transform: scale(1.02);
  filter: drop-shadow(0 0 30px var(--neon-pink));
}

.hero-title.clickable-title:active {
  transform: scale(0.98);
}

/* Enhanced glitch effect for clickable title */
.hero-title.clickable-title .glitch {
  animation-duration: 1.5s;
}

.hero-title.clickable-title:hover .glitch {
  animation-duration: 0.8s;
}

/* Alphabet cycling animation keyframes */
@keyframes alphabetCycle {
  0% { 
    text-shadow: 0 0 10px var(--neon-pink), 0 0 20px var(--neon-pink), 0 0 40px var(--neon-pink);
  }
  50% { 
    text-shadow: 0 0 10px var(--neon-cyan), 0 0 20px var(--neon-cyan), 0 0 40px var(--neon-cyan);
  }
  100% { 
    text-shadow: 0 0 10px var(--neon-pink), 0 0 20px var(--neon-pink), 0 0 40px var(--neon-pink);
  }
}

.hero-title.clickable-title.animating {
  animation: alphabetCycle 1.6s ease-in-out;
}

